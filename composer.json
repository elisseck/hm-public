{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/commerce": "^2.2",
        "drupal/commerce_authnet": "1.0-beta2",
        "drupal/commerce_migrate": "^2.0@alpha",
        "drupal/commerce_recurring": "^1.0@beta",
        "drupal/commerce_shipping": "^2.0@beta",
        "drupal/config_update": "^1.5",
        "drupal/console": "^1.0.1",
        "drupal/core": "~8.4",
        "drupal/devel": "1.x-dev",
        "drupal/drush_delete": "^2.2",
        "drupal/flag": "^4.0@alpha",
        "drupal/fortytwo": "^2.5",
        "drupal/metatag": "^1.3",
        "drupal/migrate_manifest": "1.5",
        "drupal/migrate_tools": "4.0-beta1",
        "drupal/migrate_upgrade": "3.0.0-rc2",
        "drupal/page_manager": "^4.0@beta",
        "drupal/panels": "^4.2",
        "drupal/paragraphs": "^1.2",
        "drupal/pathauto": "^1.0",
        "drupal/profile": "^1.0@RC",
        "drupal/search_api": "^1.5",
        "drupal/search_api_solr": "^1.2",
        "drupal/simple_megamenu": "^1.0@beta",
        "drupal/swiftmailer": "^1.0@beta",
        "drupal/twig_field_value": "^1.1",
        "drupal/twig_tweak": "2.0.0-rc2",
        "drupal/twig_xdebug": "^1.0",
        "drupal/webform": "^5.0@RC",
        "drupal/webform_migrate": "^1.0@alpha",
        "drush/drush": "~8.0",
        "react/child-process": "^0.5.0",
        "react/event-loop": "^0.4.3",
        "react/promise": "^2.5.1",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "geerlingguy/drupal-vm": "^4.6",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsstream": "~1.2",
        "phpunit/phpunit": ">=4.8.28 <5",
        "symfony/css-selector": "~2.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "source"
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true,
        "patches": {
            "drupal/commerce": {
                "order comment support": "patches/commerce-add-order-comments-2908196-4.patch",
                "legacy admin comments": "patches/commerce_log.templates.patch"
            },
            "drupal/commerce_shipping": {
                "expand the shipmentweight condition to support ranges": "patches/commerce_shipping-shipment_weight_condition_range-2919113-5-d8.patch"
            },
            "drupal/page_manager": {
                "fixes variant route filter issue": "https://www.drupal.org/files/issues/2918564-22.patch"
            },
            "drupal/l10n_client_ui": {
                "Fixes invalid render array key":"https://www.drupal.org/files/issues/l10n_client-hook_toolbar-fix-2872668-3.patch"
            }
        }
    }
}
