{#
/**
 * @file
 * Theme override for custom block Intro Content.
 *
 * Available variables:
 * -  field_intro_header
 * -  field_intro_content
 * -  field_intro_button
 *
 */
#}
<div class="contextual-region">
  {{ title_prefix }}
  {{ title_suffix }}

  <div class="intro-content">
    <div>
      <h1>{{ content.field_intro_header|field_value }}</h1>
      <p>{{ content.field_intro_content|field_value }}</p>
      {% if content.field_intro_button|field_value is not empty %}
        <a href="{{ content.field_intro_button|field_raw('uri') }}" class="button button--primary">
          {{ content.field_intro_button|field_raw('title') }}
        </a>
      {% endif %}
    </div>
  </div>

</div>
